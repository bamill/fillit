#include "libft.h"
#include "fillit.h"
#include <stdlib.h>

t_list	*ft_stomultistr(t_list *lst)
{
	char** temp;
	char** p;
	size_t size;

	temp = ft_strsplit(lst->content, '\n');
	p = piece_trim(temp);
	size = \
		(ft_strlen(p[0]) + 1) * piece_y(p);
	ft_memdel((void**)temp);
	ft_memdel(&(lst->content));
	lst->content = (void *)p;
	lst->content_size = size;
	return (lst);
}
